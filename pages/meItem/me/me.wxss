/* pages/meItem/me/me.wxss */
.me-bg{
  width: 100%;
  background-size: cover;
  position: absolute;
  top: 0;
  z-index: 0;
}
.user-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
  margin-top: 241px;
}
.me-image{
  width: 72px;
  height: 72px;
  border-radius: 100%;
  z-index: 1;
}
.me-name{
  font-size: 18px;
  color: #464646;
  font-weight: 700;
  z-index: 1; 
}
.topic-number-wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
  margin-top: 6px;
}
.topic-number{
  font-size: 24px;
  color: #7F2FF0;
  z-index: 1;
}
.text{
  font-size: 12px;
  color: #464646;
  font-weight: 500;
  z-index: 1;
}
.feed-button{
  line-height: 96rpx;
  margin: 20px auto 10px auto;
  font-size: 30rpx;
  width: 584rpx;
  height: 96rpx;
  border-radius: 20rpx;
  color: white;
  background-color: #464646;
  display: flex;
  justify-content: center;
  align-items: center;
}
button::after{
  border: none;
}
.about-button{
  line-height: 96rpx;
  margin: 0 auto;
  font-size: 30rpx;
  width: 580rpx;
  height: 92rpx;
  border-radius: 20rpx;
  color: #464646;
  background-color: white;
  border: 1px solid #464646;
  display: flex;
  justify-content: center;
  align-items: center;
}