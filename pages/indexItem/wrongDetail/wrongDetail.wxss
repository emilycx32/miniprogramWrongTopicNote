.action-button-wrap{
  position: absolute;
  top: 7px;
  left: 17px;
  display: flex;
}
.main{
  display: flex;
}
.wrong-topic-notes-preview-content{
  width: 100%;
  margin: 40px auto 20px auto;
  border-radius: 10px;
}
.main-left{
  width: 17px;
  height: 10px;
  float: left;
}
.main-right{
  width: 17px;
  height: 10px;
  float: right;
}

.question-left{
  width: 14px;
  height: 10px;
  float: left;
}
.question-right{
  width: 14px;
  height: 10px;
  float: right;
}
/* 重做天数样式 */
.redo-status{
  background-color: #D3D6DC; 
  width: 20px; 
  height: 20px; 
  border-radius: 100%; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  margin-left: 4px;
}

.redo-record-list-wrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.redo-record-wrap{
  width: 100%;
  height: 34px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 0.5px dashed #B8B8B8;
}
.redo-date{
  font-size: 13px;
  color: #464646;
  margin-right: 72px;
}
.redo-date-status{
  font-size: 13px;
}
.done-button{
  line-height: 96rpx;
  margin: 30px auto;
  font-size: 30rpx;
  width: 584rpx;
  height: 96rpx;
  border-radius: 20rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
button::after{
  border: none;
}